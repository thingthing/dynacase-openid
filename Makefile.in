PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir=@PUBRULE@
pubdir = @prefix@
srcdir = @srcdir@
appname = @APPNAME@
applib = WHAT
export pubdir utildir appname applib

TAR = tar
GZIP_ENV = --best

SUBDIR = Class OPENID Action Services

pages_not_xml = info.xml

include $(utildir)/PubRule

DISTFILES += $(SUBDIR) \
            RELEASE VERSION 

$(pubdir)/$(appname): 
	mkdir -p $(pubdir)/$(appname)
	mkdir -p $(pubdir)/$(appname)/Services
	mkdir -p $(pubdir)/$(appname)/Services/Yadis
	cp Services/Yadis/* $(pubdir)/$(appname)/Services/Yadis
$(pubdir)/$(appname)/.htaccess: htaccess $(pubdir)/$(appname)
	cp $< $@