<?xml version="1.0"?>
<module name="freedom-openid" disabled="no" version="@VERSION@" release="@RELEASE@" author="thing-leoh nicolas <thing-_n@epitech.net>">

  <description lang="fr">Support OPENID pour freedom</description>
  <description lang="en">OPENID support for Freedom</description>

  <requires>
    <module name="freedom-networkuser" />
    <module name="freedom-core" version="2.15.2" comp="ge" />
  </requires>

  <changelog>
    <version number="1.0" date="2010-07-28">
    	<change title="Initial release />
    </version>
  </changelog>
  
   <pre-install>
    <check type="phpfunction" function="curl_exec">
      <help>Please install php5-curl before installing openid module</help>
    </check>
  </pre-install>
  
 <pre-update>
    <check type="phpfunction" function="curl_exec">
      <help>Please install php5-curl before updating openid module</help>
    </check>
  </pre-update>
</module>
